}

.md-mid {
  margin-top: 20rpx;
}

.md-mid .tit {
  font-size: 40rpx;
  color: #394043;
  display: block;
  margin-bottom: 10rpx;
}

.md-mid.md-mid-yq .tit {
  font-size: 30rpx;
