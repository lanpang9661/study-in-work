  line-height: 74rpx;
  min-width: 168rpx;
  text-align: center;
}

.md-bottom>text {
  display: block;
}

.md-bottom .tit {
  color: #999;
}

.md-b-txt {
  margin-bottom: 20rpx;
  color: #666;
}

page {
  height: 100%;
  color: #333;
  display: flex;
  flex-direction: column;
  font: normal 30rpx/1.68 -apple-system-font,
          'Helvetica Neue',
          Helvetica,
          'Microsoft YaHei',
          sans-serif;
}

.md-b-img image {
  width: 314rpx;
  height: 314rpx;
  display: block;
}

.yq-detai, .md-b-img {
  display: -webkit-flex;
  display: -webkit-box;
  display: flex;
  -webkit-flex-wrap: wrap;
  flex-wrap: wrap;
  width: 100%;
}

.yq-detai.open{height:80rpx;
overflow:hidden;
}
.md-mid-yq .tit{ margin-bottom: 20rpx}
.yq-detai .yq-tx, .md-b-img .jp-xm {
  flex: 0 0 12.5%;
  max-width: 12.5%;
  padding: 10rpx;
  box-sizing: border-box;
  text-align: center;
}

.md-b-img .jp-xm {
  flex: 0 0 50%;
  max-width: 50%;
}

.yq-tx .yq-tx-d {
  width: 62rpx;
  height: 62rpx;
  border-radius: 100%;
  overflow: hidden;
}

.yq-tx image, .md-b-img .jp-xm image {
  display: block;
  width: 100%;
}

.hy_more {
  text-align: center
 
}

.hy_more .up, .hy_more .down {
  width: 10px;
  height: 10px;
  display: inline-block;
  position: relative;
}

.hy_more .down {
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  -webkit-transform: rotate(45deg);
  top: -2px;
}

.hy_more .up {
  border-top: 1px solid #999;
  border-left: 1px solid #999;
  -webkit-transform: rotate(45deg);
  top: 2px;
}

text.name {
  display: block;
  font-size: 30rpx;
  line-height: 1.4;
  white-space: nowrap;
  margin-top: 10rpx;
}
.t-foot{ margin-top: 30rpx}
.md-top{ position: relative}
.md-top .ph-link{ position: absolute; right: 40rpx; top:40rpx }