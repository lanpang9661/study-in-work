/* pages/me/information/information.wxss */
page{
  background: #f0f0f0;
}
.weui-cells{
  position:initial;
  margin-top: 32rpx;
}
.weui-cell{
  position: initial;
  padding: 0 32rpx;
  height: 109rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.weui-cell__hd{
  width: 170rpx;
  line-height: 109rpx;
  color:rgba(51,51,51,1);
  font-size: 32rpx;
}
.weui-cell__bd{
  height: 109rpx;
  font-size: 32rpx;
}
.weui-input{
  height: 109rpx;
  line-height: 109rpx;
  font-size: 32rpx;
  color: #999;
}
.weui-cell-textarea{
  height: 270rpx;
}
.weui-cell-textarea .weui-cell__hd{
  position: relative;
  height: 270rpx;
}
.weui-cell-textarea textarea{
  height: 210rpx;
  line-height: 51rpx;
  color: #999;
  position:relative;
  top:-62rpx;
}
.weui-btn-area{
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: 55rpx auto 0 auto;
  border-radius: 10rpx;
}
.weui-btn-area button{
  background-color: rgb(38, 135, 229);
  font-size: 36rpx;
  color: #fff;
  display: block;
  width: 600rpx;
  height: 88rpx;
  line-height: 88rpx;
  padding: 0rpx;
}
.weui-btn-area button:hover{
  background-color:rgb(38, 135, 229);
  color: #fff;
}
.shen_ti{
  padding: 24rpx 32rpx 0 32rpx;
  font-size:22rpx;
  color:rgba(248,113,0,1);
  line-height:30rpx;
}
.shouji{
  position: absolute;
  z-index: -1000;
  left: -200000px;
  opacity: 0;
  color:transparent;
}
.shoujiView .weui-flex{
  margin-top: 20rpx;
  border: 1px solid #F0F0F0;
}
.shoujiView .weui-flex__item{
  width:45rpx;
  text-align:center;
  border-left:1px solid #F0F0F0;
  height:68rpx;
  line-height:78rpx;
  color:#999;
}
/* .shoujiView.active .weui-flex__item{
  border-left: 1px solid rgb(248,113,0);
} */
.shoujiView.active .weui-flex{
  border: 1px solid rgb(248,113,0);
}
.shoujiView .weui-flex__item:first-child{
  border-left:0;
}
.phcolor{
  color: #999;
}