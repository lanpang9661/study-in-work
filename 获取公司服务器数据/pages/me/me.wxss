/* pages/me/me.wxss */
page{
  background: #F0F0F0;
  position: relative;
  top: -1rpx;
}
.my_baner{
  height: 240rpx;
  position: relative;
}
.my_baner image{
  height: 240rpx;
  width: 100%;
}
.my_baner_title{

  position:absolute;
  top:50%;
  left:30rpx;
   -webkit-transform: translate3d(0, -50%, 0);
  transform: translate3d(0, -50%, 0);
  display: -webkit-flex
}
.my_baner_title image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  margin: 0 auto;
  display: block;
}
.my_baner_title_name{
  width: 100%;
  color: #fff;
  font-size: 32rpx;
  line-height: 37rpx;
  text-align: left;
  font-weight: bold;
}
.my_baner_title_h2{
  color: #fff;
  font-size: 22rpx;
  line-height: 29rpx;
  text-align: left
}
.weui-panel__bd{
  margin-top: 24rpx;
}
.weui-media-box{
  position: initial;
}
.weui-cells{
  position: initial;
}
.weui-cell{
  padding: 32rpx 40rpx;
  position: initial;
  border-bottom:1px solid #F0F0F0;
}
.weui-cell:last-child{
  border-bottom:none;
}
.weui-cell__bd{
  color:rgba(51,51,51,0.85);
  font-size: 32rpx;
  line-height: 42rpx;
}
.weui-cell__hd{
  width:34rpx;
  height:34rpx;
  line-height: 34rpx;
  margin-right: 32rpx;
}
.weui-cell__hd image{
  width:34rpx;
  height:34rpx; 
}
.ht{
  width: 100%;
  height: 1px;
  background: #fff;
  position: absolute;
  top:0px;
  left:0px;
}

.info-group{
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 32rpx 20rpx;
}

.box_r {
  margin: 0 auto;
  border-radius: 50%;
  width: 26px;
  height: 20px;
  position: relative;
  color: #fff;
  font-size: 36rpx;
}
.mingpian-text{
  font-size: 28rpx;
  color: #fff;
  line-height: 28rpx;
  display: block;
  margin-top: 5px;
}
.mmf-mingpian{
  font-size: 52rpx;
  display: block;
  line-height: 20px;
}
.my_baner_title_mp{

  position:absolute;
  top:50%;
