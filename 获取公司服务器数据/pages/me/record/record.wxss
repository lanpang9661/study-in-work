/* pages/me/record/record.wxss */
.weui-loadmore{
  background: #F0F0F0;
  color: #999;
  font-size: 24rpx;
}
.weui-loadmore__tips_in-line{
  background: #F0F0F0;
}
page{
  background: #f0f0f0;
}
.item{
  position:relative;
}
.del{
  background:rgba(230,67,64,1);
  width:208rpx;
  text-align:center;
  font-size: 32rpx;
  z-index:4;
  right:0;
  color:#fff;
  position:absolute;
  top:0;
  height:100%;
}
.del text{
  position:absolute;
  width:208rpx;
  height:50rpx;
  line-height:50rpx;
  top:50%;
  margin-top:-25rpx;
  left:0;
}
.list{
  z-index:5;
  transition:left 0.2s ease-in-out;
  position:relative;
  top:0;
  padding: 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #fff;
  overflow: hidden;
}
.list_img{
  width: 250rpx;
  height: 188rpx;
  position: absolute;
  left: 0px;
  top: 0px;
}
.list_main{
  width: 410rpx;
  float: left;
}
.list_con{
  line-height: 29rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
}
.list_h2{
  color:rgba(51,51,51,1);
  line-height: 45rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: block;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list_h3{
  color:rgba(248,113,0,1);
  line-height: 45rpx;
